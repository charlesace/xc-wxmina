page {
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.frame {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 200rpx;
}

.amount {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: #444;
    font-size: 36rpx;
}

.amount-number {
    margin-left: 30rpx;
    color: red;
    font-size: 56rpx;
}

.code {
    margin-top: 40rpx;
    font-size: 64rpx;
    color: #444;
}

.describe {
    font-size: 28rpx;
    color: #999;
}

.pic {
    margin-top: 60rpx;
    width: 450rpx;
    height: 450rpx;
}