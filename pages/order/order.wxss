/* pages/order/order.wxss */
page {
  background-color: #f3f3f3;
  height: 100%;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.page__hd {
  padding: 30rpx 40rpx;

  background-color: #008fff;

  color: #fff;
}

.page__hd .product-name{
  text-align: center;
}
.page__hd .input-tip {
  margin-top: 40rpx;
  height: 26rpx;
  font-size: 26rpx;
}
.page__hd .input-container {
  display: flex;
  justify-content: flex-end;

  margin-top: 40rpx;
}


.page__bd {
  margin-top: 30rpx;
  padding-bottom: 100rpx;
}

.page__ft {
  position:fixed;
  bottom: 0;

  width: 100%;

  background-color: #fff;
}

.page__ft .btn-confirm{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 96%;

  background-color: #008fff;
  color: #fff;
}