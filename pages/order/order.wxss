/* pages/order/order.wxss */
page {
  background-color: #f3f3f3;
  height: 100%;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.page__hd {
  padding: 30rpx 40rpx;

  background-color: #008fff;

  color: #fff;
}

.page__hd .product-name{
  text-align: center;
}
.page__hd .input-tip {
  margin-top: 40rpx;
  height: 26rpx;
  font-size: 26rpx;
}
.page__hd .input-container {
  display: flex;
  justify-content: flex-end;

  margin-top: 40rpx;
}


.page__bd {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}

.page__ft {

  width: 100%;

  background-color: #fff;
}

.page__ft .btn-confirm{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 96%;

  background-color: #008fff;
  color: #fff;
}

.weui-cell {
    position: static;
    border-bottom: 1px solid #ddd;
}

.order-cell {
    padding:10px 15px;
    display:flex;
    align-items:center;

    border-bottom: 1px solid #ddd;
}
.order-cell-input {
    display:flex;
    justify-content: space-between;

    width: 100%;
    font-size: 14px;
}
.order-cell-input .order-cell-label{
    width: 105px;
    word-wrap: break-word;
    word-break: break-all;
}
.order-cell .order-cell-value {
    /* align-self: flex-end; */
}

modal canvas {
    margin-left: auto;
    margin-right: auto;

    width: 300rpx;
    height: 300rpx;
}