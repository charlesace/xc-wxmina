/* pages/order/order.wxss */
page {
    background-color: #f3f3f3;
    height: 100%;
}

.page {
    display: flex;
    flex-direction: column;

    padding: 260rpx 0 100rpx 0;
    height: 100%;
}
.page__hd {
    position:fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;

    padding: 30rpx 40rpx;
    height: 300rpx;

    box-sizing: border-box;

    background-color: #008fff;

    color: #fff;
}

.page__hd .product-name{
    text-align: center;
}
.page__hd .input-tip {
    margin-top: 40rpx;
    height: 26rpx;
    font-size: 26rpx;
}
.page__hd .input-container {
    display: flex;
    justify-content: flex-end;

    margin-top: 40rpx;
}


.page__bd {
    margin-top: 30rpx;
    padding-bottom: 20rpx;
}

.page__ft {
    position: fixed;
    bottom: 0;

    width: 100%;

    background-color: #fff;
}

.page__ft .btn-confirm{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    width: 96%;

    background-color: #008fff;
    color: #fff;
}

.weui-cell {
    position: static;
    border-bottom: 1px solid #ddd;
}

.unit {
    margin-right: 20rpx;
}

.auth-needed {
    color: #f35f48;
}

.auth-pass {
    color: #2edc29;
}

.order-cell {
    position: relative;
    z-index: 0;

    padding:10px 15px;
    display:flex;
    align-items:center;

    border-bottom: 1px solid #ddd;
}
.order-cell-input {
    display:flex;
    justify-content: space-between;

    width: 100%;
    font-size: 14px;
}
.order-cell-input .order-cell-label{
    width: 105px;
    word-wrap: break-word;
    word-break: break-all;
}
.order-cell .order-cell-value {
    /* align-self: flex-end; */
    width: 80rpx;
}

modal canvas {
    margin-left: auto;
    margin-right: auto;

    width: 300rpx;
    height: 300rpx;
}

/* 搜索页面 */
.search-page {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;

    z-index: 2;

    background-color: #f3f3f3;
}