/* pages/order/searchPage.wxss */

page {
    background-color: #f3f3f3;
    height: 100%;
}

.search-bar {
    position: fixed;
    width: 750rpx;
    height: 100rpx;
    top: 0;
    z-index: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #efeff4;
}

.search-content {
    width: 690rpx;
    height: 70rpx;
    border-radius: 5px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    background: #fff;
    border: 1rpx solid #e6e6ea;
}

.search-icon {
    margin-left: 30rpx;
    width: 30rpx;
}

.search-input {
    margin-left: 20rpx;
    width: 570rpx;
    font-size: 32rpx;
    color: #666;
}

.search-clear {
    height: 40rpx;
    width: 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.content {
    margin-top: 100rpx;
}

.item {
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
}

.section {
    width: 750rpx;
    height: 99rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.label {
    width: 700rpx;
    margin-left: 40rpx;
    color: #666;
    font-size: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.check {
    width: 50rpx;
    height: 50rpx;
    margin-right: 40rpx;
}

.bottom {
    height: 100rpx;
}
