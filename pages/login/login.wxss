page {
    height: 100%;
    background: linear-gradient(45deg, #27a7fd, #fac5ff);
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.frame {
    display: flex;
    width: 500rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 200rpx;
}

.logo {
    width: 180rpx;
    height: 180rpx;
    margin-bottom: 40rpx;
    border-radius: 100rpx;
    border: 3px solid #fff;
}

.name {
    color: #fff;
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 100rpx;
}

.section {
    display: flex;
    align-items: flex-end;
    border-bottom: 1px solid #fff;
}

.section .iconfont {
    margin-left: 20rpx;
    margin-bottom: 10rpx;
    color: #fff;
    font-size: 40rpx;
}

.section input {
    margin-top: 30rpx;
    padding-left: 40rpx;
    padding-right: 20rpx;
    height: 80rpx;
    color: #fff;
}

.section .place-holder {
    color: rgba(255, 255, 255, 0.7);
}

.btn-login {
    width: 400rpx;
    margin-top: 130rpx;
    border: 2px solid #fff;
    border-radius: 50rpx;
    background-color: transparent;
    color: #fff;
    font-size: 36rpx;
}
