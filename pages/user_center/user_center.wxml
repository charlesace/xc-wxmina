<!--pages/user_center/user_center.wxml-->
<view class="container">
  <view class="userinfo">
    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="userinfo-nickname">
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <view class="content">
    <view class="panel login-info">
      <text class="label">登录账号</text>
      <text class="value" selectable="true">{{userName}}</text>
    </view>

    <view class="panel">
      <text class="label">技术支持</text>
      <text class="value" selectable="true">0574-85223333</text>
    </view>
    <view class="panel">
      <text class="label">当前版本</text>
      <text class="value">1.0.0</text>
    </view>
  </view>
  <view class="logout">
    <button class="btn-logout"
      bindtap="logout">退出登录</button>
  </view>
</view>
