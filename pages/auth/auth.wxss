/* pages/auth/auth.wxss */

page {
    background-color: #f3f3f3;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.head {
    width: 750rpx;
    height: 240rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    background-color: #008fff;
}

.name {
    margin-top: 50rpx;
    height: 60rpx;
    font-size: 38rpx;
    color: #fff;
}

.tip {
    margin-top: 30rpx;
    font-size: 30rpx;
    color: rgba(255, 255, 255, 0.8);
}

.content {
    margin-top: 20rpx;
    background-color: #fff;
}

.section {
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.btn-frame {
    position: absolute;
    width: 750rpx;
    height: 150rpx;
    bottom: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
}

.label {
    width: 160rpx;
    margin-left: 40rpx;
    color: #444;
    font-weight: bold;
    font-size: 34rpx;
}

.input {
    width: 300rpx;
    margin-left:20rpx;
    color: #999;
    font-size: 36rpx;
}

.place-holder {
    font-size: 34rpx;
    color:#bbb;
}

.send {
    height: 70rpx;
    width: 160rpx;
    margin-right: 40rpx;
    padding: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #fff;
    background-color: #008fff;
}

.btn {
    height: 100rpx;
    width: 660rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
    color: #fff;
    background-color: #008fff;
}
